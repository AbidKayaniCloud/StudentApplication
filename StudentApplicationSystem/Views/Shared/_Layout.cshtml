<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student Application System</title>
    <link rel="icon" href="~/logo.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_LeftMenu")
<div id="page-container" class="container">



    @Html.Partial("_HeaderNavBar")


    <div class="row row-offcanvas row-offcanvas-right">

        <div id="content-wrap" class="container body-content col-12 col-md-9">

            @RenderBody()

        </div>



        <footer class="noselect" id="footer">Copyright &copy; 2019<br> Ford Otosan Student Application System - Designed by Ali Baran Tasdemir</footer>
        


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</div>
</body>
</html>
