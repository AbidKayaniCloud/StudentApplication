            @Html.TextArea("Job Name", Model.Job.jobName, new { disabled = "disabled", @readonly = true, style = "width:250px" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.User.name, htmlAttributes: new { @class = "control-label col-md-2" })
